@model Transaction

<div class="container">
    <div class="row">
        <h1 class="col-sm-10">Welcome, @ViewBag.user.FirstName </h1>
        <a href="/logout" class="col-sm-2">logout</a>
    </div>
    <form action="/createtransaction" method ="post">
        <input asp-for="UserId" type="hidden" value="@ViewBag.user.UserId">
        <label asp-for="Amount"></label>
        <input asp-for="Amount">
        <span asp-validation-for="Amount"></span>
        <input type="submit">
    </form>
    <p>Account Balance</p>
    <p>@ViewBag.Total</p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Transaction t in ViewBag.Trans)
            {
                <tr>
                    <td>@t.Amount</td>
                    <td>@t.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>

</div>
